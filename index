        <button class="btn-duo" onclick="finishAndSaveDay()">‚úÖ Terminar y Guardar Progreso</button>
    </div>

<script>
    // --- DATOS INICIALES (JEFF NIPPARD SEMANA 6) ---
    const defaultData = {
        dia1: [
            { id: "d1e1", name: "45¬∞ Incline DB Press", sets: 2, repsTarget: "8-10", warmUp: "2-3 sets", video: "https://youtube.com", sub: "Barbell Press" },
            { id: "d1e2", name: "Cable Crossover Ladder", sets: 2, repsTarget: "10-12", warmUp: "1-2 sets", video: "", sub: "Bottom-Half Flye" },
            { id: "d1e3", name: "Pec Deck", sets: 2, repsTarget: "10-12", warmUp: "1-2 sets", video: "", sub: "N/A" },
            { id: "d1e4", name: "Dual-Handle Lat Pulldown", sets: 2, repsTarget: "10-12", warmUp: "1-2 sets", video: "", sub: "Wide-Grip Pull-Up" },
            { id: "d1e5", name: "High-Cable Lateral Raise", sets: 2, repsTarget: "10-12", warmUp: "1-2 sets", video: "", sub: "DB Lateral Raise" },
            { id: "d1e6", name: "Smith Machine Row", sets: 2, repsTarget: "8-10", warmUp: "1-2 sets", video: "", sub: "Pendlay Row" },
            { id: "d1e7", name: "Overhead Cable Triceps (Bar)", sets: 2, repsTarget: "10-12", warmUp: "1 set", video: "", sub: "Skull Crusher" },
            { id: "d1e8", name: "Bayesian Cable Curl", sets: 2, repsTarget: "10-12", warmUp: "1 set", video: "", sub: "Incline DB Curl" }
        ],
        dia2: [
            { id: "d2e1", name: "Lying Leg Curl", sets: 2, repsTarget: "10-12", warmUp: "2 sets", video: "", sub: "Seated Leg Curl" },
            { id: "d2e2", name: "Smith Static Lunge (Elevated)", sets: 2, repsTarget: "8-10", warmUp: "2-4 sets", video: "", sub: "Split Squat" },
            { id: "d2e3", name: "45¬∞ Hyperextension", sets: 2, repsTarget: "8-10", warmUp: "2-4 sets", video: "", sub: "Glute-Ham Raise" },
            { id: "d2e4", name: "Leg Extension", sets: 2, repsTarget: "10-12", warmUp: "1-2 sets", video: "", sub: "Sissy Squat" },
            { id: "d2e5", name: "Leg Press Calf Press", sets: 2, repsTarget: "8-10", warmUp: "1-2 sets", video: "", sub: "Seated Calf Raise" },
            { id: "d2e6", name: "Machine Crunch", sets: 2, repsTarget: "10-12", warmUp: "1 set", video: "", sub: "Cable Crunch" }
        ],
        dia3: [
            { id: "d3e1", name: "Chest-Supported T-Bar Row", sets: 2, repsTarget: "10-12", warmUp: "2-3 sets", video: "", sub: "Machine Row" },
            { id: "d3e2", name: "Lean-Back Lat Pulldown", sets: 2, repsTarget: "10-12", warmUp: "2-3 sets", video: "", sub: "Pull-Up" },
            { id: "d3e3", name: "Elbows-Out Cable Row", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Meadows Row" },
