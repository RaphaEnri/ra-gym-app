        ],
        dia4: [
            { id: "d4e1", name: "Seated DB Shoulder Press", sets: 2, repsTarget: "10-12", warmUp: "2-3 sets", video: "", sub: "Machine Press" },
            { id: "d4e2", name: "Machine Chest Press", sets: 2, repsTarget: "10-12", warmUp: "2-4 sets", video: "", sub: "Bench Press" },
            { id: "d4e3", name: "Bottom-Half Cable Flye", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "DB Flye" },
