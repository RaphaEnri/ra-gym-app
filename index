        ],
        dia5: [
            { id: "d5e1", name: "Seated Leg Curl", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Lying Leg Curl" },
            { id: "d5e2", name: "Hack Squat", sets: 2, repsTarget: "10-12", warmUp: "2-4 sets", video: "", sub: "Leg Press" },
            { id: "d5e3", name: "Walking Lunge", sets: 2, repsTarget: "10-12", warmUp: "2-3 sets", video: "", sub: "Static Lunge" },
            { id: "d5e4", name: "Leg Extension", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Sissy Squat" },
            { id: "d5e5", name: "Machine Hip Adduction", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Copenhagen" },
            { id: "d5e6", name: "Machine Hip Abduction", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Band Walk" },
            { id: "d5e7", name: "Standing Calf Raise", sets: 2, repsTarget: "12-15", warmUp: "1-2 sets", video: "", sub: "Leg Press Calf" }
        ]
    };

    // --- VARIABLES GLOBALES ---
    let appData = JSON.parse(localStorage.getItem('ra_gym_data')) || defaultData;
    let logs = JSON.parse(localStorage.getItem('ra_gym_logs')) || {}; // Lo que escribes HOY
    let history = JSON.parse(localStorage.getItem('ra_gym_history')) || {}; // Lo que escribiste AYER (Para comparar)
    let streakData = JSON.parse(localStorage.getItem('ra_gym_streak')) || { count: 0, lastDate: null };
    let isEditMode = false;

    // Iniciar
    updateStreakDisplay();
    render();

    // --- FUNCIONES PRINCIPALES ---

    function saveRoutine() {
        localStorage.setItem('ra_gym_data', JSON.stringify(appData));
        render();
    }

    function saveLog(exId, setNum, field, value) {
        if (!logs[exId]) logs[exId] = {};
        if (!logs[exId][setNum]) logs[exId][setNum] = {};
        
        logs[exId][setNum][field] = value;
        localStorage.setItem('ra_gym_logs', JSON.stringify(logs));
        updateProgressBar();
    }

    // --- EL BOT√ìN M√ÅGICO "TERMINAR Y GUARDAR" ---
    function finishAndSaveDay() {
        const day = document.getElementById('daySelect').value;
        const today = new Date().toDateString();

        if (confirm("¬øTerminar entrenamiento? Esto guardar√° tus n√∫meros de hoy en el HISTORIAL y limpiar√° las casillas para la pr√≥xima semana.")) {
            
            // 1. Guardar LOGS actuales en HISTORY
            appData[day].forEach(ex => {
                if(logs[ex.id]) {
                    // Si no existe entrada en history, crearla
                    if (!history[ex.id]) history[ex.id] = {};
                    
                    // Copiar sets
                    for(let i=1; i<=ex.sets; i++) {
                        if(logs[ex.id][i]) {
                            history[ex.id][i] = logs[ex.id][i];
                        }
                    }
                    // Borrar log actual para dejar limpio
                    delete logs[ex.id];
                }
            });

            // 2. Persistir cambios
            localStorage.setItem('ra_gym_history', JSON.stringify(history));
            localStorage.setItem('ra_gym_logs', JSON.stringify(logs));

            // 3. Manejar Racha (Streak)
            if (streakData.lastDate !== today) {
                const yesterday = new Date();
                yesterday.setDate(yesterday.getDate() - 1);
                
                if (streakData.lastDate === yesterday.toDateString()) {
                    streakData.count++;
                } else {
                    streakData.count = 1;
                }
                streakData.lastDate = today;
                localStorage.setItem('ra_gym_streak', JSON.stringify(streakData));
            }

            // 4. UI Feedback
            alert("‚úÖ ¬°Entrenamiento Guardado! Tus n√∫meros de hoy ser√°n la referencia para la pr√≥xima semana.");
            updateStreakDisplay();
            render();
            window.scrollTo(0,0);
        }
    }

    // --- RENDERIZADO ---
    function render() {
        const day = document.getElementById('daySelect').value;
        const container = document.getElementById('container');
        container.innerHTML = '';

        appData[day].forEach((ex, index) => {
            const card = document.createElement('div');
            card.className = 'card';
            
            let setsHtml = '';
            for(let i=1; i <= ex.sets; i++) {
                const savedWeight = logs[ex.id]?.[i]?.weight || '';
                const savedReps = logs[ex.id]?.[i]?.reps || '';

                // OBTENER HISTORIAL (PROGRESI√ìN)
                const lastSession = history[ex.id]?.[i];
                let historyText = "---";
                if(lastSession && (lastSession.weight || lastSession.reps)) {
                    historyText = `‚èÆÔ∏è ${lastSession.weight || 0}kg x ${lastSession.reps || 0}`;
                }

                setsHtml += `
                <div class="set-row">
                    <div class="set-badge">${i}</div>
                    
                    <div class="input-group">
                        <input type="number" class="workout-input" placeholder="kg" 
                            value="${savedWeight}" 
                            oninput="saveLog('${ex.id}', ${i}, 'weight', this.value)">
                        <div class="history-tag">${historyText}</div>
                    </div>

                    <div class="input-group">
                        <input type="number" class="workout-input" placeholder="reps" 
                            value="${savedReps}" 
                            oninput="saveLog('${ex.id}', ${i}, 'reps', this.value)">
                        <div class="history-tag">Objetivo: ${ex.repsTarget}</div>
                    </div>
                </div>`;
            }

            card.innerHTML = `
                <div class="card-header">
                    <div class="ex-title">
                        <span class="static-text">${ex.name}</span>
                        <input class="edit-input" value="${ex.name}" onchange="updateRoutineField('${day}', ${index}, 'name', this.value)">
                    </div>
                    <div class="ex-meta">
                        <span class="static-text">${ex.sets} Sets</span>
                        <input class="edit-input" type="number" placeholder="Sets" value="${ex.sets}" onchange="updateRoutineField('${day}', ${index}, 'sets', Number(this.value))">
                    </div>
                </div>

                <div class="sets-container">
                    ${setsHtml}
                </div>

                <div class="card-footer">
                    <div class="info-pill">üî• ${ex.warmUp}</div>
                    <div class="info-pill" style="border: 1px solid var(--accent); color: var(--accent);">üîÑ ${ex.sub}</div>
                    
                    <input class="edit-input" placeholder="Calentamiento" value="${ex.warmUp}" onchange="updateRoutineField('${day}', ${index}, 'warmUp', this.value)">
                    <input class="edit-input" placeholder="Sustituto" value="${ex.sub}" onchange="updateRoutineField('${day}', ${index}, 'sub', this.value)">
                    
                    <div style="margin-top:5px">
                        <a href="${ex.video || '#'}" target="_blank" style="color:#4fc3f7; text-decoration:none; font-weight:bold; font-size:0.85rem">üì∫ Ver Video</a>
                        <input class="edit-input" placeholder="URL Video" value="${ex.video}" onchange="updateRoutineField('${day}', ${index}, 'video', this.value)">
                    </div>
                </div>
            `;
            container.appendChild(card);
        });
        
        if(isEditMode) document.body.classList.add('show-edit');
        else document.body.classList.remove('show-edit');
        
        updateProgressBar();
    }

    // --- UTILIDADES ---
    function toggleEditMode() {
        isEditMode = !isEditMode;
        document.querySelector('.edit-mode-btn').textContent = isEditMode ? "Guardar" : "‚úèÔ∏è Editar";
        render(); // Re-render para mostrar inputs
    }

    function changeDay() { render(); }

    function updateRoutineField(day, exIndex, field, value) {
        appData[day][exIndex][field] = value;
        saveRoutine();
    }

    function updateStreakDisplay() {
        document.getElementById('streakCount').textContent = streakData.count;
    }

    function updateProgressBar() {
        const day = document.getElementById('daySelect').value;
        const exercises = appData[day];
        let totalSets = 0;
        let completedSets = 0;

        exercises.forEach(ex => {
            totalSets += ex.sets;
            for(let i=1; i<=ex.sets; i++) {
                if (logs[ex.id] && logs[ex.id][i] && (logs[ex.id][i].weight || logs[ex.id][i].reps)) {
                    completedSets++;
                }
            }
        });
        const percent = totalSets === 0 ? 0 : (completedSets / totalSets) * 100;
        document.getElementById('progressBar').style.width = percent + "%";
    }

</script>

</body>
</html>
